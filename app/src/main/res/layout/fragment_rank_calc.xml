<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ff009688"
    tools:context="net.jesspetersen.wvwtoolbox.RankCalc">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="Please enter the rank number that you wish to search:"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rankSearch"
            android:background="#ffffff"
            android:textAlignment="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sb"
            android:text="WHAT'S MY RANK?"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rankNum"
            android:text="For Rank: ??"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentTitle"
            android:text="You are currently a ??."
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextTitleNum"
            android:text="You are ?? away from the next title."
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextTitleName"
            android:text="The next title is ??."
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextRankNum"
            android:text="You are ?? away from the next rank."
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextRankName"
            android:text="The next rank is ??."
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="Good luck, Soldier!"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>
    </LinearLayout>


</LinearLayout>

</ScrollView>